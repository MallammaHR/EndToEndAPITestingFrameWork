<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="API Regression Test Suite" verbose="4">

	<listeners>
		<listener
			class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
	</listeners>


	<test name="Go Rest API Test - Get User">
		<classes>
			<class name="com.qa.api.gorest.test.GetUserTest" />
		</classes>
	</test>

	<test name="Go Rest API Test - Create User">
		<classes>
			<class name="com.qa.api.gorest.test.CreateUserTest" />
		</classes>
	</test>

	<test name="Go Rest API Test - Update User">
		<classes>
			<class name="com.qa.api.gorest.test.UpdateUserTest" />
		</classes>
	</test>

	<test name="Go Rest API Test - Delete User">
		<classes>
			<class name="com.qa.api.gorest.test.DeleteUserTest" />
		</classes>
	</test>

	<test name="Product API Test - Get Product">
		<classes>
			<class name="com.qa.api.product.test.ProductAPITest" />
		</classes>
	</test>

	<test name="Product API Test - Get Product With Json Path">
		<classes>
			<class
				name="com.qa.api.product.test.ProductAPITestWithJsonPath" />
		</classes>
	</test>

	<test name="Schema Test">
		<classes>
			<class name="com.qa.api.schema.test.GoRestUserAPISchemaTest" />
		</classes>
	</test>


	<!--test name="Basic Auth API Test">
		<classes>
			<class name="com.qa.api.basicauth.tests.BasicAuthTest" />
		</classes>
	</test>-->


</suite>	